<h1>Signup</h1>

<%= form_for @user do |f| %>
  <%= f.label :username, "Username" %>
  <%= f.text_field :username %>
  </br>

  <%= f.label :password %>
  <%= f.password_field :password %>
  </br>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  </br>

  <%= f.submit %>
<% end %>

<%= link_to('Sign Up with Facebook!', '/auth/facebook') %> 